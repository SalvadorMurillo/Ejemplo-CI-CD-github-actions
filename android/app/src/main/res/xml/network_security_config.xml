<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all other domains (HTTPS by default) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic only for localhost and development IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.100.11</domain>
    </domain-config>
    
    <!-- Explicitly allow Supabase domains (should work by default with base-config, but added for clarity) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.com</domain>
    </domain-config>
</network-security-config>